<Window x:Class="SchoolTimetable.Windows.wndUserEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolTimetable.Windows"
        mc:Ignorable="d"
        Title="Felhasználó módosítása" Width="300" SizeToContent="Height">
    <Grid>
        <StackPanel Margin="20">
            <Label>Név</Label>
            <TextBox x:Name="tbName"/>
            <Label>Felhasználónév</Label>
            <TextBox/>
            <Label>Jelszó</Label>
            <TextBox/>
            <CheckBox Content="Admin"/>
            <Button Click="btnSave_Click">Mentés</Button>
            <Button Click="btnCancel_Click">Mégse</Button>
        </StackPanel>
    </Grid>
</Window>
