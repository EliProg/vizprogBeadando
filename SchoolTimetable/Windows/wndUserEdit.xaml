<Window x:Class="SchoolTimetable.Windows.wndUserEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolTimetable.Windows"
        mc:Ignorable="d"
        Title="Felhasználó módosítása" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label>Név</Label>
            <TextBox x:Name="name"></TextBox>
            <Label >Felhasználónév</Label>
            <TextBox x:Name="userName"></TextBox>
            <Label>Jelszó</Label>
            <TextBox x:Name="passwd"></TextBox>
            <Label>Admin</Label>
            <CheckBox x:Name="admin"></CheckBox>
            <Button Click="btnSave_Click">Mentés</Button>
            <Button Click="btnSave_Click">Mentés</Button>
            <Button Click="btnCancel_Click">Mégse</Button>
        </StackPanel>
    </Grid>
</Window>
