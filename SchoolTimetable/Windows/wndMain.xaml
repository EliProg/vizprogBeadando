<Window x:Class="SchoolTimetable.Windows.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolTimetable.Windows"
        mc:Ignorable="d"
        Title="wndMain" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem x:Name="miAdmin" Visibility="Collapsed" Header="Adminisztráció">
                <MenuItem Click="miTimetableLessons_Click">Órarend</MenuItem>
                <MenuItem Click="miUsers_Click">Felhasználók</MenuItem>
                <MenuItem Click="miSchoolYears_Click">Tanévek</MenuItem>
                <MenuItem Click="miSubjects_Click">Tantárgyak</MenuItem>
            </MenuItem>
            <MenuItem x:Name="miTimetables" Visibility="Collapsed" Click="miTimetables_Click" Header="Órarendek"/>
            <MenuItem x:Name="miMyTimetable" Click="miMyTimetable_Click" Header="Saját órarend"/>
            <MenuItem x:Name="miUser" Header="Bejelentkezett:" HorizontalAlignment="Right">
                <MenuItem Header="Kijelentkezés" Click="miLogout_Click"/>
                <MenuItem Header="Bezárás" Click="miClose_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="160,150,490,244">
            <Frame Name="fmMain" NavigationUIVisibility="Hidden" Margin="0,0,-375,-209" />
        </Grid>
    </StackPanel>
</Window>
