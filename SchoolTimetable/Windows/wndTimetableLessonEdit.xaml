<Window x:Class="SchoolTimetable.Windows.wndTimetableLessonEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolTimetable.Windows"
        xmlns:customName="wpftool"
        mc:Ignorable="d"
        Title="Órarend módosítása" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label>Osztály</Label>
            <ComboBox x:Name="Class" />
            <Label>Tantárgy</Label>
            <ComboBox x:Name="Subject" />
            <Label>Tanár</Label>
            <ComboBox x:Name="Teacher"/>
            <Label>Hét napja</Label>
            <ComboBox x:Name="Day"/>
            <Label>Óra</Label>
            <ComboBox x:Name="LessonNum"/>
            <Label>Érvényesség kezdete</Label>
            <DatePicker x:Name="Start"></DatePicker>
            <Label>Érvényesség vége</Label>
            <DatePicker x:Name="End"></DatePicker>
            <Button Click="btnSave_Click">Mentés</Button>
            <Button Click="btnCancel_Click">Mégse</Button>
        </StackPanel>
    </Grid>
</Window>
