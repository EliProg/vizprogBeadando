<Window x:Class="SchoolTimetable.Windows.wndLessonLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolTimetable.Windows"
        mc:Ignorable="d"
        Title="Tanóra naplózása" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label>Dátum</Label>
        <TextBox x:Name="tbDate" IsReadOnly="True"/>
        <Label>Óra</Label>
        <TextBox x:Name="tbLessonNum" IsReadOnly="True"/>
        <Label>Osztály</Label>
        <TextBox x:Name="tbClass" IsReadOnly="True"/>
        <Label>Tantárgy</Label>
        <TextBox x:Name="tbSubject" IsReadOnly="True"/>
        <Label>Tanár</Label>
        <TextBox x:Name="tbTeacher" IsReadOnly="True"/>
        <Label>Téma</Label>
        <TextBox x:Name="tbTopic"/>
        <Button Click="btnSave_Click">Mentés</Button>
        <Button Click="btnCancel_Click">Mégse</Button>
    </StackPanel>
</Window>
